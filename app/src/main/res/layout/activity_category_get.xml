<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".services.category.CategoryGetActivity">

    <!-- Main Container -->
    <RelativeLayout
        android:id="@+id/search_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_container_background"
        tools:ignore="MissingConstraints">

        <!-- search bar container-->
        <RelativeLayout
            android:id="@+id/search_bar_container"
            android:layout_width="294dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp">


            <!-- Search icon -->

            <ImageView
                android:id="@+id/barDivider11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:background="?actionBarDivider" />

            <RelativeLayout
                android:id="@+id/search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/ic_search" />


            <!-- schedule -->
            <RelativeLayout
                android:id="@+id/data_do_age"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/ic_data_do_agendamento"
                android:translationX="255dp" />

            <!-- text input -->
            <TextView
                android:id="@+id/o_que_vc_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"


                android:layout_toEndOf="@+id/search"
                android:lineSpacingExtra="4sp"
                android:text="@string/o_que_vc_pr"
                android:textAppearance="@style/o_que_vc_pr" />

        </RelativeLayout>

<!--        fragment container-->
        <LinearLayout
            android:id="@+id/fragment_category_container"
            android:orientation="vertical"
            android:layout_width="294dp"
            android:layout_height="280dp"
            android:layout_below="@+id/search_bar_container"
            android:layout_alignStart="@+id/search_bar_container"
            android:layout_alignEnd="@+id/search_bar_container"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="0dp" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>